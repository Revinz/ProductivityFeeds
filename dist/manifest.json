{
  "name": "Youtube Productivity Enhancer",
  "version": "0.01",
  "description": "Modifies Youtube to help increasing productivity and removing distracting elements",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "/youtube/js/popup.html",
    "default_title": "Youtube Productivity Enhancer",
    "default_icon": {}
  },
  "icons": {},

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "css": ["/youtube/css/palettes.css", "/youtube/css/main_page_styles.css"],
      "run_at": "document_end",
      "js": [
        "/includes/jquery-3.4.1.min.js",
        "/youtube/js/main_helper_scripts/sub_gallery_content_adder.js",
        "/youtube/js/sidebar_utilities.js",
        "/youtube/js/main_helper_scripts/sub_gallery_maker.js",
        "/youtube/js/main_page_modifier.js",
        "/youtube/js/page_navigation_handler.js"
      ]
    }
  ],

  "background": {
    "scripts": ["/youtube/js/background.js"],
    "persistent": true
  },

  "permissions": ["storage", "tabs"],

  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}
